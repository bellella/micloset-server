{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "assets": ["mail/templates/**/*", "generated/**/*"]
  },
  "plugins": [
    {
      "name": "@nestjs/swagger",
      "options": {
        "classValidatorShim": true,
        "introspectComments": true
      },
      "dtoFileNameSuffix": [".dto.ts", ".entity.ts", ".ts"]
    }
  ]
}
